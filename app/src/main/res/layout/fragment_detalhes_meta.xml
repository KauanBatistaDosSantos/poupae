<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDetalheNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_meta_detalhe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtDetalheValorAlvo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valor_alvo_detalhe"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtDetalheValorAtual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valor_alvo_detalhe"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtDetalheDataLimite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_limite_detalhe"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtDetalheDataCriacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/criada_em_detalhe"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnEditarMeta"
            android:text="@string/editar_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <Button
            android:id="@+id/btnExcluirMeta"
            android:text="@string/excluir_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAdicionarValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_valor"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primaryColor" />

        <Button
            android:id="@+id/btnRetirarValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/retirar_valor"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/black" />
    </LinearLayout>
</ScrollView>
